{
  "cuda": true,
  "dataset": {
    "name": "KDD_CUP99",
    "classification_mode": "binary",
    "n_worker": 4

  },
  "autoencoder": {
    "trainable": true,
    "hidden_size": [128, 64, 32],
    "pretrain_epochs": 50,
    "pretrain_batch_size": 100,
    "loss_fn": "mae",
    "activation": "tanh",
    "optimizer": "sgd",
    "lr_schedule": true,
    "initial_lr": 0.1,
    "finial_lr": 0.00001,
    "decay": 0.5

  },
  "classifier": {
    "name": "ATTENTION",
    "epoch": 20,
    "batch_size": 100,
    "loss_fn": "cce",
    "optimizer": "adam",
    "lr": 0.001,
    "min_lr": 0.000001,
    "scheduler": true,
    "decay": 0.0001,
    "regularization": ""
  }
}